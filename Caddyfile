lims.localhost {
    tls internal
    encode gzip
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    }

    # ðŸ§ª Semua request yang diawali /api -> ke Laravel (backend)
    @api path /api/*
    handle @api {
        reverse_proxy 127.0.0.1:8000
    }

    # ðŸŒ Semua request lainnya -> ke Vite (frontend)
    handle {
        reverse_proxy 127.0.0.1:5173
    }
}
